# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Directory Configuration
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
DOWNLOAD_DIR=./videos

# Cloudflare R2 Storage Configuration
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_key_here
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name_here

# Google Cloud Configuration (for Translate and TTS)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# AWS Configuration (for Polly TTS alternative)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Railway Deployment (if using Railway)
PORT=8000
RAILWAY_VOLUME_MOUNT_PATH=/app/videos

# Application Configuration
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE=500MB
TASK_TIMEOUT=600

